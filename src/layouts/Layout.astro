---
import "/src/input.css";
import Navbar from "../components/Navbar.astro";
import Starfield from "../components/Starfield.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-black">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="src/assets/images/svg/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <section>
      <Starfield />

      <div class="absolute inset-0 flex flex-col items-center justify-center">
        <img src="src/assets/images/svg/logo.svg" alt="Sirius" class="w-14" />
        <h1 class="text-6xl font-bold text-white">Sirius</h1>
        <p class="mt-4 text-2xl text-gray-400">Script</p>
      </div>
      <slot />
    </section>
  </body>
</html>
